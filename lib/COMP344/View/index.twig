{% extends 'layout/base.twig' %}

{% block content %}


<section id="form"><!--form-->
	<div class="container">
		{% if flash.success %}
			<div class="alert alert-success" role="alert">{{flash.success}}</div>
		{% endif %}
		<div class="row">
			<div class="col-sm-4 col-sm-offset-1">
				<div class="login-form"><!--login form-->
					<h2>Login to your account</h2>
					<form action="{{ urlFor('login') }}" method="POST">
						<input type="email" name="email" placeholder="Email address" />
						<input type="password" name="password" placeholder="Password" />
						{% if flash.error %}
							<p class="help-block error">{{ flash.error }}</p>
						{% endif %}
						<!-- <span>
							<input type="checkbox" class="checkbox"> 
							Keep me signed in
						</span> -->
						<button type="submit" class="btn btn-default">Login</button>
					</form>
				</div><!--/login form-->
			</div>
			<div class="col-sm-1">
				<h2 class="or">OR</h2>
			</div>
			<div class="col-sm-4">
				<h2>Register now!</h2>
				<p>In order to use the system, you must be registered with a valid MQU login.</p>
				<p>If you want to do it now, <a href="{{ urlFor('register') }}">click here</a> to register.</p>
			</div>
		</div>
	</div>
</section><!--/form-->

{% endblock %}